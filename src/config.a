LoadGameInfo
         lda   gCurrentGameInfo
         asl
         tax
         lda   directories,x
         sta   $00
         lda   directories+1,x
         sta   $01
         ldx   #$02
         jsr   addToPath
         lda   #<kInfoFilename
         sta   $00
         lda   #>kInfoFilename
         sta   $01
         jsr   addToPath
         lda   LoadFile1Shot
         !word .path
         !word $0800
         !word $1400
         !word $1C00
         rts

addToPath
         ldy   #$00
         lda   ($00),y
         tay
-        lda   ($00),y
         sta   .path,x
         inx
         dey
         bne   -
         stx   .path
         rts
