WAIT     = $FCA8
SPEAKER  = $C030

;------------------------------------------------------------------------------
; SoftBell
;
; in:    none
; out:   all registers preserved
;        all flags clobbered
;------------------------------------------------------------------------------
SoftBell
         php
         phx
         pha
         ldx   #32
-        lda   #2
         jsr   WAIT
         bit   SPEAKER
         lda   #33
         jsr   WAIT
         bit   SPEAKER
         dex
         bne   -
         pla
         plx
         plp
         rts
